{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  // 自動マージ設定
  "platformAutomerge": true,
  "automerge": true,

  // 安定版を待つ
  "minimumReleaseAge": "3 days",

  // ロックファイルメンテナンス無効
  "lockFileMaintenance": {
    "enabled": false
  },

  // ブランチ数制限なし
  "branchConcurrentLimit": 0,

  // ラベル付け
  "labels": ["dependencies", "renovate"]
}
